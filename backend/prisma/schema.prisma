generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  role      UserRole
  bio       String
  dob       DateTime? @db.Date
}

enum UserRole {
  Student
  Individual
  Mass
  Admin
}
