generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  firebase_uid String   @unique
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  role      UserRole
  photo_url String?
  bio       String
  dob       DateTime?
  created_at  DateTime @default(now())
}

enum UserRole {
  Student
  Individual
  Mass
  Admin
}
